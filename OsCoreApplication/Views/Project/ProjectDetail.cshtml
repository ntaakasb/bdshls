@using OsCoreApplication.DataLayer.EFModel
@using OsCoreApplication.Common
@model OsCoreApplication.ViewModel.Models.ProjectModels
@{
    ViewBag.Title = "Dự Án " + Model.ProjectName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var projectImages = ViewBag.ProjectImages as List<ProjectImage>;
}

<link href="~/assets/plugins/sliderengine/amazingslider-1.css" rel="stylesheet" />

@section meta {
    <meta property="og:url" content="http://bdshoanglienson.com" />
    <meta property="og:image" content="http://bdshoanglienson.com/@(projectImages != null && projectImages.Any() ? projectImages.FirstOrDefault().ImageUrl : "/assets/img/logo.png")" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Bds Hoàng Liên Sơn - @Model.ProjectName" />
    <meta property="og:description" content="du an dong binh duong, dong bình duong, đông bình dương, cho thuê nhà bình dương, kinh doanh nha dat, bat dong san hoang line son," />
    <meta property="og:image" content="http://bdshoanglienson.com" />
}

<!-- Load Facebook SDK for JavaScript -->
<div id="fb-root"></div>



<section class="banner banner-secondary" id="top" style="background-image: url(../template/img/banner-image-1-1920x300.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="banner-caption">
                    <div class="line-dec"></div>
                    <h2>@Model.ProjectName</h2>

                    <h4><i class="fa fa-map-marker"></i> @Model.Address</h4>
                </div>
            </div>
        </div>
    </div>
</section>



<main>
    <section class="featured-places">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div>
                        <img src="@Model.Thumbnail" alt="" class="img-responsive wc-image">
                    </div>
                    <br>
                    @if (projectImages != null && projectImages.Any())
                    {
                <div class="row">

                    @foreach (var it in projectImages)
                    {
                        <div class="col-sm-4 col-xs-6">
                            <div class="form-group">
                                <img src="@it.ImageUrl" alt="" class="img-responsive">
                            </div>
                        </div>
                    }


                </div>
                    }
                    </div>

                <div class="col-md-6 col-xs-12">
                    <form action="#" method="post" class="form">
                        <h2><strong class="text-primary">@Model.Price</strong></h2>

                        <br>

                        <ul class="list-group list-group-flush">

                            @if (!string.IsNullOrEmpty(Model.Acreage))
                            {
                                <li class="list-group-item">
                                    <div class="clearfix">
                                        <span class="pull-left">Diện tích</span>

                                        <strong class="pull-right">@Model.Acreage</strong>
                                    </div>
                                </li>

                            }

                            @if (!string.IsNullOrEmpty(Model.Direction))
                            {
                                <li class="list-group-item">
                                    <div class="clearfix">
                                        <span class="pull-left">Hướng</span>

                                        <strong class="pull-right">@Model.Direction</strong>
                                    </div>
                                </li>
                            }

                            @if (!string.IsNullOrEmpty(Model.Width) && !string.IsNullOrEmpty(Model.Height))
                            {
                                <li class="list-group-item">
                                    <div class="clearfix">
                                        <span class="pull-left">Kích thước</span>

                                        <strong class="pull-right">@Model.Width <span> x </span>@Model.Height</strong>
                                    </div>
                                </li>
                            }

                            @if (!string.IsNullOrEmpty(Model.Type))
                            {
                                <li class="list-group-item">
                                    <div class="clearfix">
                                        <span class="pull-left">Loại hình</span>

                                        <strong class="pull-right">@Model.Type</strong>
                                    </div>
                                </li>

                            }

                            @if (!string.IsNullOrEmpty(Model.Juridical))
                            {

                                <li class="list-group-item">
                                    <div class="clearfix">
                                        <span class="pull-left">Pháp lý</span>

                                        <strong class="pull-right">@Model.Juridical</strong>
                                    </div>
                                </li>
                            }




                        </ul>

                       
                    </form>
                </div>
            </div>


            <div class="row">

                <div class="accordions">
                    <ul class="accordion">
                        <li>
                            <a class="accordion-trigger">Mô tả dự án</a>

                            <div class="accordion-content">
                                @Html.Raw(WebUtility.HtmlDecode(Model.Description))
                            </div>
                        </li>
                        @*<li>
                            <a class="accordion-trigger">Map</a>
                            <div class="accordion-content">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d11628.751733874766!2d27.948302749999996!3d43.22651925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbg!4v1592215682178!5m2!1sen!2sbg" width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                            </div>
                        </li>*@
