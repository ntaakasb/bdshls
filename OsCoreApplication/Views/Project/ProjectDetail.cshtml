                    </ul> <!-- / accordion -->
                </div>

            </div>


        </div>
    </section>
</main>








<div id="home-wrap" class="content-section fullpage-wrap">

    
    <!-- Project Heightlights  -->
    @{Html.RenderAction("ProjectRandom", "Project"); }
